<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="109dp">

    <Button
        android:id="@+id/boutonDemarrerUneNouvelleSeance"
        android:layout_width="407dp"
        android:layout_height="47dp"
        android:height="50dp"
        android:text="Démarrer une nouvelle séance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267" />

    <Button
        android:id="@+id/MainAct_Btn_ReprendreSeance"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:height="50dp"
        android:text="Reprendre la séance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boutonDemarrerUneNouvelleSeance"
        app:layout_constraintVertical_bias="0.002" />

    <Button
        android:id="@+id/boutonGestionnaireMesocycle"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:height="50dp"
        android:text="Gestionnaire des mésocycles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainAct_Btn_ReprendreSeance"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/boutonParametreCompte"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:height="50dp"
        android:text="Paramètre du compte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boutonGestionnaireMesocycle"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>