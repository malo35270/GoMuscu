<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NouvelleSeance">

    <TextView
        android:id="@+id/newseance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:text="Nouvelle séance !"
        android:textSize="40sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/mesocycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginHorizontal="40dp"
        android:text="mésocycle n°1"
        android:textSize="25sp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/boutonSeanceA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="40dp"
        android:height="50dp"
        android:text="Seance A" />

    <Button
        android:id="@+id/boutonSeanceB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:height="50dp"
        android:text="Seance B" />

    <Button
        android:id="@+id/boutonSeanceC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:height="50dp"
        android:text="Seance C" />
</LinearLayout>